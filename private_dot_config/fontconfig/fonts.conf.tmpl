<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE fontconfig SYSTEM "fonts.dtd">
<fontconfig>
  <alias>
    <family>monospace</family>
    <prefer>
      <family>MesloLGS NF</family>
    </prefer>
  </alias>
  {{ if .fonts.croscore -}}
  <alias>
    <family>serif</family>
    <prefer>
      <family>Tinos</family>
    </prefer>
  </alias>
  <alias>
    <family>sans-serif</family>
    <prefer>
      <family>Arimo</family>
    </prefer>
  </alias>
  <alias>
    <family>sans</family>
    <prefer>
      <family>Arimo</family>
    </prefer>
  </alias>
  <!-- Alternatives for MS fonts -->
  <match>
    <test name="family">
      <string>Arial</string>
    </test>
    <edit binding="strong" mode="assign" name="family">
      <string>Arimo</string>
    </edit>
  </match>
  <match>
    <test name="family">
      <string>Helvetica</string>
    </test>
    <edit binding="strong" mode="assign" name="family">
      <string>Arimo</string>
    </edit>
  </match>
  <match>
    <test name="family">
      <string>Verdana</string>
    </test>
    <edit binding="strong" mode="assign" name="family">
      <string>Arimo</string>
    </edit>
  </match>
  <match>
    <test name="family">
      <string>Tahoma</string>
    </test>
    <edit binding="strong" mode="assign" name="family">
      <string>Arimo</string>
    </edit>
  </match>
  <match>
    <test name="family">
      <string>Comic Sans MS</string>
    </test>
    <edit binding="strong" mode="assign" name="family">
      <string>Arimo</string>
    </edit>
  </match>
  <match>
    <test name="family">
      <string>Times New Roman</string>
    </test>
    <edit binding="strong" mode="assign" name="family">
      <string>Tinos</string>
    </edit>
  </match>
  <match>
    <test name="family">
      <string>Times</string>
    </test>
    <edit binding="strong" mode="assign" name="family">
      <string>Tinos</string>
    </edit>
  </match>
  <match>
    <test name="family">
      <string>Courier New</string>
    </test>
    <edit binding="strong" mode="assign" name="family">
      <string>Cousine</string>
    </edit>
  </match>
  {{ end -}}
  {{ if .fonts.crosextra -}}
  <!-- Calibri Alternative -->
  <match target="font">
    <test name="family">
      <string>Calibri</string>
    </test>
    <edit mode="assign" name="family">
      <string>Carlito</string>
    </edit>
  </match>
  <match target="pattern">
    <test name="family">
      <string>Calibri</string>
    </test>
    <edit binding="strong" mode="prepend" name="family">
      <string>Carlito</string>
    </edit>
  </match>
  <!-- Cambria Alternative -->
  <match target="font">
    <test name="family">
      <string>Cambria</string>
    </test>
    <edit mode="assign" name="family">
      <string>Caladea</string>
    </edit>
  </match>
  <match target="pattern">
    <test name="family">
      <string>Cambria</string>
    </test>
    <edit binding="strong" mode="prepend" name="family">
      <string>Caladea</string>
    </edit>
  </match>
  {{ end -}}
</fontconfig>
