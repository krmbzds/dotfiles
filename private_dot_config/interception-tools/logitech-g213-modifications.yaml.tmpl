{{- if (and .logitech.g213.enabled (or .logitech.g213.remap_caps_lock .logitech.g213.remap_shift)) -}}
TIMING:
  TAP_MILLISEC: 200
  DOUBLE_TAP_MILLISEC: 150

MAPPINGS:
  {{ if .logitech.g213.remap_shift -}}
  - KEY: KEY_CAPSLOCK
    TAP: KEY_ESC
    HOLD: KEY_LEFTCTRL
  {{ end -}}
  {{ if .logitech.g213.remap_caps_lock -}}
  - KEY: KEY_LEFTSHIFT
    TAP: [KEY_LEFTSHIFT, KEY_9]
    HOLD: KEY_LEFTSHIFT
  - KEY: KEY_RIGHTSHIFT
    TAP: [KEY_RIGHTSHIFT, KEY_0]
    HOLD: KEY_RIGHTSHIFT
  {{ end -}}
{{ end -}}
