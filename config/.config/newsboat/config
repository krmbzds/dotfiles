# Browser
browser "open -ga firefox %u"

show-read-articles    yes
show-read-feeds       yes
mark-as-read-on-hover no

# Key bindings
bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key l open
bind-key h quit
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key D pb-download
bind-key U show-urls
bind-key x pb-delete

# Solarized color scheme
color background         default   default
color listnormal         default   default
color listnormal_unread  default   default
color listfocus          white     yellow
color listfocus_unread   white     yellow
color info               default   white
color article            default   default

# Highlights
highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default

# Open webpage in Outline
macro l set browser "open -ga firefox https://outline.com/%u"; open-in-browser-and-mark-read ; set browser "open -ga firefox %u"

# Open YouTube videos with VLC media player
macro o set browser "youtube-dl --get-url --format best '%u' | vlc --play-and-exit --no-osd --fullscreen -" ; open-in-browser-and-mark-read ; set browser "open -ga firefox %u"
macro O set browser "youtube-dl --get-url --format best '%u' | vlc --play-and-exit --no-osd --fullscreen -" ; open-in-browser ; set browser "open -ga firefox %u"

# Open videos with MPV media player
macro m set browser "~/Applications/Utilities/mpv.app/Contents/MacOS/mpv-bundle '%u'" ; open-in-browser-and-mark-read ; set browser "open -ga firefox %u"
