## XDG spec: https://specifications.freedesktop.org/basedir-spec/0.7/ar01s03.html
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_STATE_HOME="$HOME/.local/state"
export XDG_CACHE_HOME="$HOME/.cache"

# XDG_DATA_HOME
export CDK_HOME="$XDG_DATA_HOME/cdk"
export GRADLE_USER_HOME="$XDG_DATA_HOME/gradle"
export KODI_DATA="$XDG_DATA_HOME/kodi"
export MINIKUBE_HOME="$XDG_DATA_HOME/minikube"
export PASSWORD_STORE_DIR="$XDG_DATA_HOME/password-store"
export PLTUSERHOME="$XDG_DATA_HOME/racket"
export RUSTUP_HOME="$XDG_DATA_HOME/rustup"
export STARDICT_DATA_DIR="$XDG_DATA_HOME/stardict/dictionaries"
export TERMINFO="$XDG_DATA_HOME/terminfo"
export TERMINFO_DIRS="$XDG_DATA_HOME/terminfo:/usr/share/terminfo"
export WINEPREFIX="$XDG_DATA_HOME/wineprefixes/default"

# XDG_CONFIG_HOME
export ANDROID_SDK_HOME="$XDG_CONFIG_HOME/android"
export ANSIBLE_CONFIG="$XDG_CONFIG_HOME/ansible/ansible.cfg"
export AWS_CONFIG_FILE="$XDG_CONFIG_HOME/aws/config"
export AWS_SHARED_CREDENTIALS_FILE="$XDG_CONFIG_HOME/aws/credentials"
export DOCKER_CONFIG="$XDG_CONFIG_HOME/docker/config"
export GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc"
export HUB_CONFIG="$XDG_CONFIG_HOME/hub/config"
export INPUTRC="$XDG_CONFIG_HOME/readline/inputrc"
export IRBRC="$XDG_CONFIG_HOME/irb/irbrc"
export NOTMUCH_CONFIG="$XDG_CONFIG_HOME/notmuch/config"
export PYTHONSTARTUP="$XDG_CONFIG_HOME/python/pythonrc"
export TASKRC="$XDG_CONFIG_HOME/task/taskrc"
export WGETRC="$XDG_CONFIG_HOME/wget/wgetrc"
export WWW_HOME="$XDG_CONFIG_HOME/w3m"
export WGETRC="$HOME/.config/wget/wgetrc"

# XDG_STATE_HOME
export LESSHISTFILE="$XDG_STATE_HOME/less_history"
export MYSQL_HISTFILE="$XDG_STATE_HOME/mysql_history"
export NODE_REPL_HISTORY="$XDG_STATE_HOME/node_repl_history"
export PSQL_HISTORY="$XDG_STATE_HOME/psql_history"
export SQLITE_HISTORY="$XDG_STATE_HOME/sqlite_history"

# XDG_CACHE_HOME
export IPYTHONDIR="$XDG_CACHE_HOME/ipython"
export MPLCONFIGDIR="$XDG_CACHE_HOME/matplotlib"
export PERL_CPANM_HOME="$XDG_CACHE_HOME/cpanm"
export PYLINTHOME="$XDG_CACHE_HOME/pylint"
export SOLARGRAPH_CACHE="$XDG_CACHE_HOME/solargraph"
export STACK_ROOT="$XDG_CACHE_HOME/stack"
